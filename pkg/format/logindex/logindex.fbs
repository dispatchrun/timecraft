namespace logindex;

table RecordIndex {
 // Unique identifier of the process that the range was index was generated
 // from.
 process_id:[ubyte];
 // Log segment that this index file was generated for.
 segment:uint;
 // The actual index mapping keys to file locations as absolute byte offsets.
 index:[Entry];
}

struct Entry {
 key:ulong;
 value:ulong;
}

root_type RecordIndex;

file_identifier "TC.2";
file_extension "index";
